<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignInActivity">

    <ImageView
        android:id="@+id/imageViewSignIn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <Button
        android:id="@+id/buttonOut"
        android:layout_width="137dp"
        android:layout_height="57dp"
        android:layout_marginTop="650dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/reqular_button"
        android:text="התנתקות מהחשבון"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
         />

    <Button
        android:id="@+id/moveOnFromSignInBtn"
        android:layout_width="137dp"
        android:layout_height="8mm"
        android:layout_marginTop="430dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/reqular_button"
        android:text="מתאמן"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/TrainerBtn"
        android:layout_width="137dp"
        android:layout_height="8mm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:background="@drawable/reqular_button"
        android:text="מאמן"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />
</RelativeLayout>